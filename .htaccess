RewriteEngine On
RewriteBase /mrms-balatan/

# Exclude assets from rewrite rule
RewriteCond %{REQUEST_URI} !\.(css|js|svg|jpg|jpeg|png|gif|woff2|ico|ttf)$ [NC]

# Redirect all requests to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /mrms-balatan/public/index.html [L]

# Exclude the public and app directories from the rewrite rule
RewriteCond %{REQUEST_URI} !^/mrms-balatan/public/
RewriteCond %{REQUEST_URI} !^/mrms-balatan/app/
RewriteRule ^(.*)$ /mrms-balatan/public/$1 [L]
